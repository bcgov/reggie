  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/helper-plugin-utils": "^7.0.0",
    "@babel/node": "^7.5.5",
    "@babel/plugin-transform-async-to-generator": "^7.5.0",
