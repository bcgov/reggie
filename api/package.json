  "description": "This is a tool to register for and invite user to bcgov self-serve applications through keyCloak SSO",
  "engine": "node 8.4.0",
  "engines": {
    "node": "8.4.0"
  },
  "main": "index.js",
  "dependencies": {
    "@babel/runtime": "^7.5.5",
    "@bcgov/nodejs-common-utils": "0.0.16",
    "body-parser": "^1.19.0",
